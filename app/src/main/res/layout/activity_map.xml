<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.screens.maps.MapActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/mAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_12"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="7dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp">

                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/mSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="-5dp"
                        android:layoutDirection="rtl"
                        android:paddingTop="2.0dp"
                        android:splitMotionEvents="true"
                        android:theme="@style/ThemeOverlay.SearchView"
                        app:closeIcon="@drawable/ic_close"
                        app:iconifiedByDefault="true"
                        app:queryHint="Search for a menu item"
                        app:searchIcon="@drawable/ic_sreach" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mRel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="-5dp"
                        android:paddingStart="13dp"
                        android:paddingTop="13dp"
                        android:paddingEnd="13dp"
                        android:paddingBottom="14.5dp"
                        android:src="@drawable/ic_arrow" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mRelative_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/location_boy"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="7dp"
                        android:src="@drawable/ic_user"
                        android:visibility="invisible" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="6dp"
                        android:layout_toEndOf="@+id/location_boy">

                        <TextView
                            android:id="@+id/mText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_semibold_600"
                            android:textColor="@color/unselected"
                            android:textSize="@dimen/_10sdp" />

                        <LinearLayout
                            android:id="@+id/placeLL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mText"
                            android:layout_marginEnd="55dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_location_sym" />

                            <TextView
                                android:id="@+id/mLive"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="3dp"
                                android:fontFamily="@font/manrope_extrabold_800"
                                android:singleLine="true"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mSearchRelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/search_background"
                    android:visibility="invisible">

                    <androidx.appcompat.widget.SearchView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="-5dp"
                        android:layoutDirection="rtl"
                        android:paddingTop="2.0dp"
                        android:splitMotionEvents="true"
                        android:theme="@style/ThemeOverlay.SearchView"
                        android:visibility="invisible"
                        app:closeIcon="@drawable/ic_close"
                        app:iconifiedByDefault="true"
                        app:queryHint="@string/place_autocomplete_search_hint"
                        app:searchIcon="@drawable/ic_sreach" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mTab"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_below="@+id/mRel"
                    android:layout_marginTop="7dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>


                </RelativeLayout>

            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/google_map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/mAppBar" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginEnd="@dimen/size_16"
        android:paddingBottom="@dimen/size_24"
        app:layout_anchor="@id/map_view">

        <RelativeLayout
            android:id="@+id/sRelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12"
            android:layout_marginEnd="@dimen/size_12"
            android:background="@drawable/map_popup_back"
            android:visibility="invisible">

            <RelativeLayout
                android:id="@+id/mRelative1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="13dp">

                <LinearLayout
                    android:id="@+id/mLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_semibold_600"
                        android:singleLine="true"
                        android:text="@string/omv"
                        android:textColor="@color/list_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/mTime"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/size_4"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_medium_500"
                        android:gravity="end"
                        android:text="@string/open"
                        android:textColor="@color/list_time"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mLinear21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mLinear"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_32"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mGarage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium_500"
                            android:singleLine="true"
                            android:textColor="@color/location_ser"
                            android:textSize="11sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/mLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_medium_500"
                                android:singleLine="true"
                                android:textColor="@color/selected"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/mKm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_medium_500"
                                android:textColor="@color/unselected"
                                android:textSize="13sp"
                                android:visibility="visible" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/ic_direction" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <include
            android:id="@+id/map_view"
            layout="@layout/direction_bottom" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>