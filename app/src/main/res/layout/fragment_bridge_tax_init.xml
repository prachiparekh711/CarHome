<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16"
            android:layout_marginTop="@dimen/size_16"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold_600"
            android:text="@string/bridge_select_text_title"
            android:textColor="@color/textOnWhite"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintBottom_toBottomOf="@+id/back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/back" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_16"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_account"
            app:layout_constraintBottom_toBottomOf="@+id/back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/back" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/size_16"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@+id/check"
            app:layout_constraintTop_toBottomOf="@+id/title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/car_information_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_marginTop="@dimen/size_24"
                    android:fontFamily="@font/inter_bold_700"
                    android:text="@string/car_info"
                    android:textColor="#5367FC"
                    android:textSize="@dimen/text_size_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/country_registration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_marginTop="@dimen/size_16"
                    android:fontFamily="@font/inter_medium_500"
                    android:text="@string/reg_country"
                    android:textColor="@color/textOnWhiteAccentGray"
                    android:textSize="@dimen/text_size_14"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/car_information_label" />

                <Spinner
                    android:id="@+id/regCountry"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="@dimen/size_16"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/auth_text_input_background"
                    android:fontFamily="@font/inter_semibold_600"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/textOnWhite"
                    android:textColorHint="@color/textOnWhite"
                    android:textSize="@dimen/text_size_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/country_registration" />

                <LinearLayout
                    android:id="@+id/lpn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/regCountry">

                    <TextView
                        android:id="@+id/number_plate_Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_16"
                        android:layout_marginTop="@dimen/size_16"
                        android:fontFamily="@font/inter_semibold_600"
                        android:text="@string/license_plate_number"
                        android:textColor="@color/textOnWhiteAccentGray"
                        android:textSize="@dimen/text_size_14" />


                    <EditText
                        android:id="@+id/licensePlate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/size_16"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/auth_text_input_background"
                        android:fontFamily="@font/inter_medium_500"
                        android:hint="@string/license_hint"
                        android:maxLength="10"
                        android:paddingHorizontal="@dimen/size_16"
                        android:paddingVertical="@dimen/size_12"
                        android:textColor="@color/textOnWhite"
                        android:textColorHint="@color/hintOnWhite"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="@dimen/text_size_14"
                        tools:layout_editor_absoluteX="16dp" />

                    <TextView
                        android:id="@+id/number_plate_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_16"
                        android:fontFamily="@font/inter_semibold_600"
                        android:text="@string/license_error"
                        android:textColor="@color/orangeExpired"
                        android:textSize="@dimen/_9sdp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vinLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/lpn">

                    <TextView
                        android:id="@+id/vin_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_16"
                        android:layout_marginTop="@dimen/size_16"
                        android:fontFamily="@font/inter_semibold_600"
                        android:text="@string/vin_number"
                        android:textColor="@color/textOnWhiteAccentGray"
                        android:textSize="@dimen/text_size_14"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/number_plate_error" />


                    <EditText
                        android:id="@+id/vinET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/size_16"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/auth_text_input_background"
                        android:fontFamily="@font/inter_medium_500"
                        android:hint="@string/buy_vignette_vin_hint"
                        android:maxLength="17"
                        android:paddingHorizontal="@dimen/size_16"
                        android:paddingVertical="@dimen/size_12"
                        android:textColor="@color/textOnWhite"
                        android:textColorHint="@color/hintOnWhite"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="@dimen/text_size_14"
                        app:layout_constraintTop_toBottomOf="@+id/number_plate_Label"
                        tools:layout_editor_absoluteX="16dp" />

                    <TextView
                        android:id="@+id/vin_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_16"
                        android:fontFamily="@font/inter_semibold_600"
                        android:text="@string/buy_vignette_vin_hint"
                        android:textColor="@color/orangeExpired"
                        android:textSize="@dimen/_9sdp"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/licensePlate" />
                </LinearLayout>

                <TextView
                    android:id="@+id/service_information_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/inter_bold_700"
                    android:text="@string/service"
                    android:textColor="#5367FC"
                    android:textSize="@dimen/text_size_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vinLL" />


                <TextView
                    android:id="@+id/bridge_tax_categories_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/inter_medium_500"
                    android:text="@string/bridge_tax_cat"
                    android:textColor="@color/textOnWhiteAccentGray"
                    android:textSize="@dimen/text_size_14"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/service_information_label" />


                <TextView
                    android:id="@+id/bridge_tax_categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/size_16"
                    android:layout_marginTop="@dimen/size_6"
                    android:background="@drawable/auth_text_input_background"
                    android:fontFamily="@font/inter_medium_500"
                    android:hint="@string/select_from_list"
                    android:paddingHorizontal="@dimen/size_16"
                    android:paddingVertical="@dimen/size_12"
                    android:textColor="@color/textOnWhite"
                    android:textColorHint="@color/hintOnWhite"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="visible"
                    app:drawableRightCompat="@drawable/ic_spinner_item"
                    app:layout_constraintTop_toBottomOf="@+id/bridge_tax_categories_label" />


                <TextView
                    android:id="@+id/objective_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/inter_medium_500"
                    android:text="@string/objective"
                    android:textColor="@color/textOnWhiteAccentGray"
                    android:textSize="@dimen/text_size_14"
                    app:layout_constraintStart_toStartOf="@+id/bridge_tax_categories"
                    app:layout_constraintTop_toBottomOf="@+id/bridge_tax_categories" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/objectiveRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="@+id/objective_label"
                    app:layout_constraintTop_toBottomOf="@+id/objective_label"
                    tools:listitem="@layout/item_objective" />


                <TextView
                    android:id="@+id/number_of_passes_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/inter_medium_500"
                    android:text="@string/no_of_pass"
                    android:textColor="@color/textOnWhiteAccentGray"
                    android:textSize="@dimen/text_size_14"
                    app:layout_constraintStart_toStartOf="@+id/objectiveRV"
                    app:layout_constraintTop_toBottomOf="@+id/objectiveRV" />


                <TextView
                    android:id="@+id/bridge_tax_passes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/size_16"
                    android:layout_marginTop="@dimen/size_6"
                    android:background="@drawable/auth_text_input_background"
                    android:fontFamily="@font/inter_medium_500"
                    android:hint="@string/select_from_list"
                    android:paddingHorizontal="@dimen/size_16"
                    android:paddingVertical="@dimen/size_12"
                    android:textColor="@color/textOnWhite"
                    android:textColorHint="@color/hintOnWhite"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="visible"
                    app:drawableRightCompat="@drawable/ic_spinner_item"
                    app:layout_constraintTop_toBottomOf="@+id/number_of_passes_label" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/check"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/size_16"
            android:checked="false"
            app:buttonTint="@color/appPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/confirmation" />

        <TextView
            android:id="@+id/confirmation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_8"
            android:layout_marginEnd="@dimen/size_16"
            android:layout_marginBottom="@dimen/size_12"
            android:fontFamily="@font/inter_medium_500"
            android:text="@string/i_hereby_confirm"
            android:textColor="@color/textOnWhiteAccentGray"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintBottom_toTopOf="@+id/cta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/check" />

        <TextView
            android:id="@+id/cta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size_24"
            android:layout_marginBottom="@dimen/size_40"
            android:background="@drawable/cta_background"
            android:fontFamily="@font/manrope_semibold_600"
            android:gravity="center"
            android:paddingVertical="@dimen/size_16"
            android:text="@string/continue_txt"
            android:textAllCaps="false"
            android:textColor="@color/textOnSolid"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintBottom_toTopOf="@+id/indicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/indicator"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginBottom="@dimen/size_8"
            android:background="@drawable/rounded_rect_100_black"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.3" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>