<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.screens.signup_methods.email_verification.EmailVerificationActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginTop="@dimen/size_16"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_back" />

    <LinearLayout
        android:id="@+id/resendLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16"
            android:fontFamily="@font/inter_medium_500"
            android:text="@string/receive_no_link"
            android:textColor="@color/textOnWhiteAccentGray"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:fontFamily="@font/inter_medium_500"
            android:text="@string/resend"
            android:textColor="@color/appPrimary"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_reset_email" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold_600"
            android:gravity="center"
            android:text="@string/verify_email"
            android:textColor="@color/textOnWhite"
            android:textSize="@dimen/_16sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_semibold_600"
            android:gravity="center"
            android:text="@string/resetpass_email"
            android:textColor="@color/textOnWhiteAccentGray"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/gotoMailCta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_32"
            android:background="@drawable/cta_background"
            android:fontFamily="@font/manrope_semibold_600"
            android:gravity="center"
            android:paddingVertical="@dimen/size_16"
            android:text="@string/goto_email"
            android:textColor="@color/textOnSolid"
            android:textSize="@dimen/text_size_16" />

        <RelativeLayout
            android:id="@+id/mConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/mText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_semibold_600"
                android:gravity="center"
                android:text="@string/already_verified"
                android:textColor="@color/textOnWhiteAccentGray"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/mText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/mText1"
                android:fontFamily="@font/inter_semibold_600"
                android:gravity="center"
                android:text="@string/confirm_here"
                android:textColor="@color/appPrimary"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/indicator"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/size_8"
        android:background="@drawable/rounded_rect_100_black"
        android:visibility="gone" />
</RelativeLayout>