<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_4">

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rect_4_white_wstroke"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/size_8"
        android:paddingStart="@dimen/size_8"
        android:paddingEnd="@dimen/size_4">

        <ImageView
            android:id="@+id/typeIndicator"
            android:layout_width="@dimen/size_8"
            android:layout_height="@dimen/size_8"
            android:src="@drawable/circle" />

        <TextView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_4"
            android:ellipsize="end"
            android:fontFamily="@font/inter_semibold_600"
            android:maxLines="1"
            android:textColor="@color/textOnWhite"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>

</LinearLayout>