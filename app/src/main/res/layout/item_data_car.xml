<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_12"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/size_12"
        app:cardElevation="0dp"
        app:cardMaxElevation="@dimen/size_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/logo"
                    android:layout_width="@dimen/size_48"
                    android:layout_height="@dimen/size_48"
                    android:layout_margin="@dimen/size_12"
                    android:scaleType="fitCenter"
                    android:src="@drawable/carhome_icon_roviii" />

                <LinearLayout
                    android:id="@+id/mainLL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/makeAndModel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_bold_700"
                        android:textColor="@color/textOnWhite"
                        android:textSize="@dimen/text_size_16"
                        tools:text="Tesla Roadster" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/car_no"
                            android:textColor="@color/textInputBorderGray"
                            android:textSize="@dimen/text_size_14"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/carNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/inter_bold_700"
                            android:textColor="@color/textOnWhite"
                            android:textSize="@dimen/text_size_14" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/noti"
                    android:layout_width="@dimen/size_48"
                    android:layout_height="@dimen/size_48"
                    android:layout_margin="@dimen/size_12"
                    android:src="@drawable/notification_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/size_8">

                <LinearLayout
                    android:id="@+id/rcaLL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rca_ins"
                        android:textColor="@color/textOnWhite"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/statusRca"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size_4"
                            android:text="@string/status_active"
                            android:textColor="@color/activeGreen"
                            android:textSize="@dimen/text_size_14" />

                        <View
                            android:id="@+id/spacerRca"
                            android:layout_width="@dimen/size_1"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@color/secondaryTextOnWhite" />

                        <TextView
                            android:id="@+id/policyExpiryRca"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size_4"
                            android:textColor="@color/secondaryTextOnWhite"
                            android:textSize="@dimen/text_size_14" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/actionRcaTV"
                    android:layout_width="@dimen/radius_100"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cta_background"
                    android:gravity="center"
                    android:padding="@dimen/size_8"
                    android:text="@string/document"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_2"
                android:background="@color/tint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/size_8">

                <LinearLayout
                    android:id="@+id/rovinietaLL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rovinieta"
                        android:textColor="@color/textOnWhite"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/statusRo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size_4"
                            android:text="@string/status_active"
                            android:textColor="@color/activeGreen"
                            android:textSize="@dimen/text_size_14" />

                        <View
                            android:id="@+id/spacerRo"
                            android:layout_width="@dimen/size_1"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@color/secondaryTextOnWhite" />

                        <TextView
                            android:id="@+id/policyExpiryRo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size_4"
                            android:textColor="@color/secondaryTextOnWhite"
                            android:textSize="@dimen/text_size_14" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/actionRoTV"
                    android:layout_width="@dimen/radius_100"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buy_background"
                    android:gravity="center"
                    android:padding="@dimen/size_8"
                    android:text="@string/buy_vignette_cta"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_2"
                android:background="@color/tint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/size_8">

                <LinearLayout
                    android:id="@+id/bridgeLL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bridge_tax"
                        android:textColor="@color/textOnWhite"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/statusBt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size_4"
                            android:text="@string/status_active"
                            android:textColor="@color/activeGreen"
                            android:textSize="@dimen/text_size_14" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/actionBrTV"
                    android:layout_width="@dimen/radius_100"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buy_background"
                    android:gravity="center"
                    android:padding="@dimen/size_8"
                    android:text="@string/buy_vignette_cta"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>