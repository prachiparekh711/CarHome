<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appPrimary</item>
        <item name="colorPrimaryVariant">@color/appPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

<!--        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>-->

    </style>

    <style name="DefaultDayNightTheme.CarHome" parent="BaseTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Make Status bar ic_launcher_round dark. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="FullScreenTheme.CarHome" parent="DefaultDayNightTheme.CarHome">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SplashScreenTheme.CarHome" parent="FullScreenTheme.CarHome">
        <item name="android:windowBackground">@color/appPrimary</item>
        <item name="android:windowBackgroundFallback" tools:targetApi="n">@color/appPrimary</item>
        <item name="android:statusBarColor">@color/appPrimary</item>
    </style>

    <style name="TabLayoutTheme" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="fontFamily">@font/inter_medium_500</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomNavigationView">
        <item name="fontFamily">@font/inter_regular_400</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="BottomNavigationViewActive">
        <item name="fontFamily">@font/inter_medium_500</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/appPrimary</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogPosButtonTheme</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogNegButtonTheme</item>
    </style>

    <style name="DialogNegButtonTheme" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="background">@null</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="DialogPosButtonTheme" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="background">@null</item>
        <item name="android:textColor">@color/appPrimary</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/appPrimary</item>
        <item name="android:colorForeground">@color/gray</item>
    </style>

    <!-- Locations Themes -->
    <style name="ThemeOverlay.SearchView" parent="">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:editTextColor">@color/text_color</item>
        <item name="android:textColorHint">@color/unselected</item>
        <item name="android:fontFamily">@font/inter_medium_500</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="searchViewStyle">@style/SearchViewMy</item>
    </style>

    <style name="SearchViewMy" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="BottomSheetStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetTheme</item>
    </style>

    <style name="BottomSheetTheme" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/ctaBackground</item>
        <item name="colorControlActivated">@color/ctaBackground</item>
        <item name="colorControlHighlight">@color/ctaBackground</item>
    </style>


    <style name="MaterialCardViewStroke">
        <item name="cardUseCompatPadding">true</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#665367FC</item>
        <item name="cardElevation">0dp</item>
    </style>


    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">

        <item name="colorPrimary">@color/appPrimary</item>
        <item name="colorSecondary">@color/appPrimary</item>
        <item name="colorSurface">@color/white</item>
        //back ground
        <item name="colorOnSurface">@color/black</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text
        </item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/appPrimary</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="Body_ThemeOverlay.MaterialComponents.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogBodyTextStyle">
            @style/BodyMaterialAlertDialog.MaterialComponents.Body.Text
        </item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/BodyMaterialAlertDialog.MaterialComponents.Title.Text
        </item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="BodyMaterialAlertDialog.MaterialComponents.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/services</item>
        <item name="android:fontFamily">@font/inter_medium_500</item>
    </style>

    <style name="BodyMaterialAlertDialog.MaterialComponents.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter_medium_500</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>


</resources>